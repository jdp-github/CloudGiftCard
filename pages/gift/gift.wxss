/* pages/card/card.wxss */

.root-contanier {
    margin-bottom: 120rpx;
}

.image-container {
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 450rpx;
}

.big-img {
    width: 90%;
    border-radius: 10rpx;
}

.products-recommend-container {
    white-space: nowrap;
    width: 100%;
    margin-top: 20rpx;
}

.products-recommend-img-container-normal {
    display: inline-block;
    position: relative;
    border-radius: 10rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.products-recommend-img-container-check {
    border: 1rpx solid #ff3333;
    border-radius: 10rpx;
    display: inline-block;
    height: 120rpx;
    position: relative;
    margin-left: 10rpx;
    margin-right: 10rpx;
    /* width: 174rpx; *//* height: 100rpx; */
}

.products-recommend-img {
    width: 200rpx;
    height: 100rpx;
    /* margin-left: -11rpx; */
    border-radius: 10rpx;
    /* margin-bottom: -5rpx; */
}

.products-recommend-check {
    color: #ff3333;
    font-size: 40rpx;
}

.txt-title-container {
    width: 100%;
    margin-top: 20rpx;
    height: 60rpx;
}

.txt-title {
    padding-left: 20rpx;
}

.products-container {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-flow: column nowrap;
    height: 180rpx;
    width: 100%;
}

.products-item-container {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    padding-left: 20rpx;
    padding-right: 20rpx;
    height: 180rpx;
}

.products-item-img {
    width: 150rpx;
    /* height: 80rpx; */
    border-radius: 10rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.products-item-txt {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-flow: column nowrap;
    align-content: center;
    justify-content: center;
    margin-left: 30rpx;
    flex-grow: 1;
}

.products-item-txt-below {
    margin-top: 30rpx;
}

.products-item-icon-container {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-grow: 2;
    flex-direction: row;
    justify-content: flex-end;
}

.products-item-hidden-container {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.products-item-icon {
    font-size: 45rpx;
}

.products-item-icon-color {
    color: #ff3333;
}

.products-item-input {
    text-align: center;
    width: 70rpx;
    margin-right: 15rpx;
    margin-left: 15rpx;
}

.products-item-line {
    height: 1rpx;
    width: 100%;
    background: #e9ecee;
}

.footer-container {
    width: 100%;
    height: 120rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-direction: column;
    position: fixed;
    bottom: 0;
    background: #f7f7f7;
}

.footer-item-contanier {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    height: 100%;
    flex-direction: row;
    align-items: center;
}

.footer-left {
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    padding-left: 20rpx;
}

.purchase-btn {
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    right: 0;
    height: 70%;
    width: 27%;
    margin-right: 30rpx;
    bottom: 20rpx;
    border: 1rpx solid #bdbdbd;
    color: #bdbdbd;
    border-radius: 200rpx;
}

.purchase-btn-able {
    color: white;
    background: #f33;
}

.purchase-btn text {
    vertical-align: middle;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.dialog-container {
    width: 100%;
    overflow: hidden;
    position: fixed;
    z-index: 1001;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    top: 0rpx;
}

.dialog-title-container {
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
    align-items: flex-end;
}

.dialog-title-text-container {
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
}

.dialog-img {
    width: 200rpx;
    height: 200rpx;
    border: 5rpx solid white;
    border-radius: 15rpx;
    margin-left: 50rpx;
    z-index: 1003;
    position: relative;
}

.dialog-title {
    font-size: 35rpx;
    color: #000;
    z-index: 1003;
    margin-left: 20rpx;
}

.dialog-price {
    font-size: 35rpx;
    color: #000;
    z-index: 1003;
    margin-left: 20rpx;
    margin-top: 5rpx;
}

.dialog-content-contanier {
    width: 100%;
    height: 1500rpx;
    background: #fff;
    margin-top: -100rpx;
    z-index: 1002;
}

.dialog-content-scroll-view {
    height: 1000rpx;
    margin-top: 110rpx;
    overflow: scroll;
}

.dialog-long-img {
    width: 100%;
    /* height: 1000rpx; */
}

.share-container {
    width: 80%;
    overflow: hidden;
    top: 30%;
    position: fixed;
    z-index: 1001;
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 10rpx;
}

.share-title {
    width: 100%;
    height: 200rpx;
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
    font-size: 45rpx;
}

.share-line {
    width: 100%;
    height: 1rpx;
    background: #e9ecee;
}

.share-btn-container {
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    flex-flow: row;
    background: white;
}

.share-btn {
    width: 48%;
    height: 100rpx;
    background: #fff;
}

.share-btn-ok {
    color: #ff3333;
}

.vertical-line {
    width: 1rpx;
    height: 60rpx;
    background: #e9ecee;
}

button::after {
    border: none;
}
