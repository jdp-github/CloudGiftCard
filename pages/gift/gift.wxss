/* pages/card/card.wxss */

.root-contanier {
    margin-bottom: 120rpx;
}

.image-container {
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
    height: 350rpx;
    width: 100%;
}

.big-img {
    width: 100%;
    padding: 30rpx;
}

.products-recommend-container {
    white-space: nowrap;
    width: 100%;
    margin-top: 60rpx;
}

.products-recommend-img-container-normal {
    display: inline-block;
    position: relative;
    padding: 5rpx;
}

.products-recommend-img-container-check {
    border: 15rpx solid #0f0;
    border-width: 3rpx;
    border-radius: 10rpx;
    display: inline-block;
    position: relative;
    padding: 5rpx;
}

.products-recommend-img {
    width: 200rpx;
    height: 100rpx;
    margin-top: 10rpx;
    border-radius: 10rpx;
}

.products-recommend-check {
    color: #0f0;
    font-size: 40rpx;
}

.txt-title-container {
    width: 100%;
    background: 00f;
}

.txt-title {
    padding-left: 20rpx;
}

.products-container {
    display: flex;
    display: -webkit-flex;
    flex-flow: column nowrap;
    height: 100%;
    width: 100%;
}

.products-item-container {
    display: flex;
    display: -webkit-flex;
    flex-flow: row nowrap;
    align-items: center;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.products-item-img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.products-item-txt {
    display: flex;
    display: -webkit-flex;
    flex-flow: column nowrap;
    align-content: center;
    justify-content: center;
    margin-left: 30rpx;
    flex-grow: 1;
}

.products-item-txt-below {
    margin-top: 30rpx;
}

.products-item-icon-container {
    display: flex;
    display: -webkit-flex;
    flex-grow: 2;
    flex-direction: row;
    justify-content: flex-end;
}

.products-item-hidden-container {
    display: flex;
    display: -webkit-flex;
    flex-flow: row nowrap;
    align-items: center;
}

.products-item-icon {
    font-size: 45rpx;
}

.products-item-icon-color {
    color: red;
}

.products-item-input {
    text-align: center;
    width: 70rpx;
    margin-right: 15rpx;
    margin-left: 15rpx;
}

.products-item-line {
    height: 1rpx;
    width: 100%;
    background: #e9ecee;
}

.footer-container {
    width: 100%;
    height: 120rpx;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    position: fixed;
    bottom: 0;
    background: #f7f7f7;
}

.footer-item-contanier {
    display: flex;
    display: -webkit-flex;
    height: 100%;
    flex-direction: row;
    align-items: center;
}

.footer-left {
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    padding-left: 20rpx;
}

.purchase-btn {
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    right: 0;
    height: 70%;
    width: 27%;
    margin-right: 30rpx;
    bottom: 20rpx;
}

.purchase-btn text {
    vertical-align: middle;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.dialog-container {
    width: 100%;
    overflow: hidden;
    position: fixed;
    z-index: 1001;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
}

.dialog-title-container {
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
    align-items: flex-end;
}

.dialog-img {
    width: 200rpx;
    height: 200rpx;
    border: 5rpx solid white;
    border-radius: 15rpx;
    margin-left: 100rpx;
    z-index: 1003;
}

.dialog-title {
    font-size: 40rpx;
    color: #000;
    z-index: 1003;
    margin-left: 20rpx;
}

.dialog-price {
    font-size: 40rpx;
    color: #000;
    z-index: 1003;
    margin-left: 20rpx;
}

.dialog-content-contanier {
    width: 100%;
    height: 1500rpx;
    background: #fff;
    margin-top: -100rpx;
    z-index: 1002;
}

.dialog-content-scroll-view {
    height: 1500rpx;
    margin-top: 110rpx;
}

.share-container {
    width: 80%;
    height: 30%;
    overflow: hidden;
    top: 30%;
    position: fixed;
    z-index: 1001;
    display: flex;
    flex-direction: column;
    background: #fff;
}

.share-title {
    width: 100%;
    height: 75%;
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
}

.share-btn-container {
    width: 100%;
    display: flex;
    display: -webkit-flex;
    flex-flow: row;
}

.share-btn {
    width: 50%;
    height: 100%;
    background: #fff;
    border: 0rpx solid #000;
}
