.header-container {
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: space-around;
    background: white;
}

.header-title-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-grow: 1;
}

.header-txt-normal {
    font-size: 30rpx;
    margin-top: 15rpx;
    color: black;
}

.header-txt-check {
    font-size: 30rpx;
    margin-top: 15rpx;
    color: red;
}

.header-line {
    background: red;
    width: 80rpx;
    height: 4rpx;
    margin-top: 15rpx;
}

.content-container {
    width: 100%;
    display: flex;
    margin-top: 30rpx;
}

.content-item-container {
    display: flex;
    flex-direction: column;
    background: white;
    width: 100%;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.content-line {
    height: 1rpx;
    width: 100%;
    background: #e9ecee;
}

.content-item-body {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
}

.body-text-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    width: 100%;
}

.body-desc-container {
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
}

.body-gift-img {
    width: 200rpx;
    height: 100rpx;
    background: #f0f;
}

.body-gift-name {
    font-size: 35rpx;
    color: black;
    margin-left: 50rpx;
}

.body-gift-text {
    font-size: 30rpx;
    color: #999;
    margin-left: 50rpx;
}

.body-line {
    height: 1rpx;
    background: #e9ecee;
    margin-left: 50rpx;
    margin-top: 10rpx;
}

.content-item-footer {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.bottom-btn {
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    margin-right: 30rpx;
    width: 150rpx;
    height: 60rpx;
    font-size: 25rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid red;
    color: red;
    background: white;
}

.bottom-text {
    font-size: 30rpx;
    color: #999;
    margin-left: 0rpx;
}

.foot-line {
    height: 30rpx;
    width: 100%;
    background: #f7f7f7;
}
