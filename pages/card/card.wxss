/* pages/card/card.wxss */

.root-contanier {
    margin-bottom: 120rpx;
}

.image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 350rpx;
    width: 100%;
    padding: 30rpx;
}

.big-img {
    width: 100%;
}

.products-recommend-container {
    white-space: nowrap;
    width: 100%;
}

.products-recommend-img {
    width: 200rpx;
    height: 100rpx;
    padding: 20rpx;
    white-space: nowrap;
}

.txt-title {
    width: 100%;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}

.products-container {
    display: flex;
    flex-flow: column nowrap;
    height: 100%;
    width: 100%;
}

.products-item-container {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.products-item-img {
    width: 200rpx;
    height: 200rpx;
}

.products-item-txt {
    display: flex;
    flex-flow: column nowrap;
    align-content: center;
    justify-content: center;
    margin-left: 30rpx;
    flex-grow: 1;
}

.products-item-txt-below {
    margin-top: 30rpx;
}

.products-item-icon-container {
    display: flex;
    flex-grow: 2;
    flex-direction: row;
    justify-content: flex-end;
}

.products-item-hidden-container {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.products-item-icon {
    font-size: 45rpx;
}

.products-item-icon-color {
    color: red;
}

.products-item-input {
    text-align: center;
    width: 70rpx;
    margin-right: 15rpx;
    margin-left: 15rpx;
}

.products-item-line {
    height: 1rpx;
    width: 100%;
    background: #e9ecee;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.footer-container {
    width: 100%;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    position: fixed;
    bottom: 0;
    background: #f7f7f7;
}

.footer-item-contanier {
    display: flex;
    height: 100%;
    flex-direction: row;
    align-items: center;
}

.footer-left {
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
}

.purchase-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    right: 0;
    height: 70%;
    width: 30%;
    margin-right: 30rpx;
    bottom: 20rpx;
}

.purchase-btn text {
    vertical-align: middle;
}
